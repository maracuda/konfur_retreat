# httpeditorconfig.org
root = true

[]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.{cs,cshtml}]
charset = utf-8-bom
insert_final_newline = false

[.{js,jsx,json,less,ts,tsx}]
indent_size = 2

[.{xml,md,txt}]
indent_style = unset
trim_trailing_whitespace = false
insert_final_newline = false
charset = ignore

# Xml project files
[.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

# Xml config files
[.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2